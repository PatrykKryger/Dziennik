<Window x:Class="Dziennik.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nauczyciel" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Uczniowie w klasie" FontSize="18" Margin="0,0,0,10" />
            <ListBox Name="StudentsList" DisplayMemberPath="Name" Height="200" />
            <TextBlock Text="Ocena:" FontSize="16" Margin="0,10,0,0" />
            <TextBox Name="GradeTextBox" FontSize="14" />
            <TextBlock Text="Punkty z zachowania:" FontSize="16" Margin="0,10,0,0" />
            <TextBox Name="BehaviorPointsTextBox" FontSize="14" />
            <Button Content="Zapisz" Click="SaveButton_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
