<Window x:Class="Dziennik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Login:" FontSize="16" />
            <TextBox Name="LoginTextBox" FontSize="14" />
            <TextBlock Text="Hasło:" FontSize="16" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" FontSize="14" />
            <Button Content="Zaloguj" Click="LoginButton_Click" Margin="0,20,0,0" />
            <TextBlock Name="ErrorMessage" Foreground="Red" FontSize="14" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
